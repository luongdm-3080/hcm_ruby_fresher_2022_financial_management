<% if user_signed_in? %>
  <div class="wrapper">
    <div class="top_navbar">
      <div class="hamburger">
        <div class="one"></div>
        <div class="two"></div>
        <div class="three"></div>
      </div>
      <div class="top_menu">
        <%= link_to t(".base_title"), home_url, class: "logo" %>
        <%= link_to t(".add_wallet"), new_wallet_url, class: "btn add btn-primary" %>
        <ul>
          <span class ="icon-header">
            <button type="button" data-toggle="modal" data-target="#modalUser<%= current_user.id %>">
              <i class="fa-solid fa-user-graduate"></i>
            </button>
            <button type="button">
              <i class="fa-solid fa-bell"></i>
            </button>
          </span>
          <li>
            <button type="button" class="btn btn-default btn-sm">
              <span class="glyphicon glyphicon-log-out" ></span>
              <%= link_to t(".log_out"),  destroy_user_session_path, method: :delete %>
            </button>
          </li>
        </ul>
      </div>
    </div>

    <div class="sidebar">
      <ul>
        <% if current_user.admin? %>
          <li>
            <span class="icon"><i class="fa-solid fa-users"></i></span>
            <%= link_to t(".admin"), admin_root_path, class: "title" %>
          </li>
        <% end %>
        <li>
          <span class="icon"><i class="fas fa-book"></i></span>
          <%= link_to t(".transactions"), path_to_wallets, class: "title" %>
        </li>
        <li>
          <span class="icon"><i class="fas fa-file-video"></i></span>
          <%= link_to t(".report"), path_to_chart, class: "title" %>
        </li>
        <li>
          <span class="icon"><i class="fas fa-volleyball-ball"></i></span>
          <%= link_to t(".wallets"), wallets_url, class: "title" %>
        </li>
        <li class="active">
          <span class="icon"><i class="fas fa-blog"></i></span>
          <%= link_to t(".categories"), categories_url, class: "title" %>
        </li>
        <li>
          <span class="icon"><i class="fas fa-leaf"></i></span>
          <%= link_to t(".about"), about_url, class: "title" %>
        </li>
        <li>
          <span class="icon"><i class="fas fa-leaf"></i></span>
          <%= link_to t(".help"), help_url, class: "title" %>
        </li>
      </ul>
    </div>
  </div>
  <%= render "shared/show_user" , object: current_user %>
<% end %>

<%= javascript_pack_tag "sidebar_header" %>
