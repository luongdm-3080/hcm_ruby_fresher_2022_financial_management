<div class="button-group">
  <button type="button" class="search" data-toggle="modal" data-target="#modalSearch">
  <i class="fas fa-search"></i>
  <%= t "search" %>
  </button>
  <%= render "shared/form_search", url: chart_wallet_transactions_path(wallet_id: @wallet_id) %>
  <select onchange="window.location=this.value" class="form-control form-select">
    <option><%= t ".select" %></option>
    <% load_wallets.each do |w| %>
    <option value="<%= chart_wallet_transactions_path(wallet_id: w.id) %>"><%= w.name %></option>
    <% end %>
  </select>
</div>
<% if day_of_transactions.any? %>
  <div class= "line-chart">
    <h3><%= t ".total_transaction_day"%></h3>
    <%= line_chart day_of_transactions.group_by_day(:transaction_date).count, xtitle: :transaction_date, ytitle: "Count transactions", loading: "Loading...", empty: "No transaction", label: "transaction" %>
  </div>
  <hr>
  <div class= "category-type-chart">
    <h3><%= t ".total_category_type"%></h3>
    <%= pie_chart day_of_transactions.category_transaction.group(:category_type).sum(:total), prefix: "$" %>
    <h3><%= t ".total_category_type"%></h3>
    <%= column_chart day_of_transactions.category_transaction.group(:category_type).group_by_day(:transaction_date).count, xtitle: "Transacton Date", ytitle: "Count transactions" %>
  </div>
  <hr>
  <div class= "category-type-chart">
    <h3><%= t ".total_category_name"%></h3>
    <%= line_chart day_of_transactions.category_transaction.group(:name).group_by_day(:transaction_date).count, xtitle: "Transacton Date", ytitle: "Count transactions" %>
  </div>
<% else %>
    <h3><%= t ".no_transaction"%></h3>
<% end %>
